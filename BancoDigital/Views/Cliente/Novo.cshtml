@model BancoDigital.Models.Cliente
<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Novo Cliente</title>
    </head>
    <body>
        <div>
            <form action="/Cliente/Adiciona" method="post">
                <fieldset>
                    <legend>Nova Conta</legend>
                    <label>Nome: <input type="text" maxlength="50" required name="Nome" value="@Model.Nome" /></label>
                    @Html.ValidationMessage("Nome")
                    <!--<label>CPF: <input type="number" name="Cpf"/></label>-->
                    <button type="submit">Cadastrar</button>
                </fieldset>
            </form>
        </div>
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script>$("form").validate();</script>
    </body>
</html>

